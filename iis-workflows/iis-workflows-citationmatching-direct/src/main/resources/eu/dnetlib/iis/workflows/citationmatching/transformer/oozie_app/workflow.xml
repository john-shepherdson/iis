<workflow-app xmlns="uri:oozie:workflow:0.5" name="citationmatching_direct_input_transformer (spark)">
	
	<parameters>
		<property>
			<name>input</name>
			<description>input extracted document metadata merged with original</description>
		</property>
		<property>
			<name>output</name>
			<description>output direct citationmatching metadata</description>
		</property>
	</parameters>
	 
    <start to="transformer"/>
    
    <action name="transformer">
        <spark xmlns="uri:oozie:spark-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
            
            <master>yarn-cluster</master>
            <mode>cluster</mode>
            <name>citationmatching_direct_input_transformer</name>
            <class>eu.dnetlib.iis.workflows.transformers.spark.citationmatching.direct.SparkCitationMatchingDirectTransformer</class>
            <jar>${oozieTopWfApplicationPath}/lib/iis-workflows-transformers-${projectVersion}.jar</jar>
            
            <arg>-inputAvroPath=${input}</arg>
            <arg>-outputAvroPath=${output}</arg>
            
        </spark>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
