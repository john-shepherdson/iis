<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-export_actionmanager_sequencefile_sampledataproducer">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapred.job.queue.name</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>

    <start to="producer" />

    <action name="producer">
        <java>
            <!-- The data generated by this node is deleted in this section -->
            <prepare>
                <delete path="${nameNode}${workingDir}/producer" />
                <mkdir path="${nameNode}${workingDir}/producer" />
            </prepare>
            <!-- This is simple wrapper for the Java code -->
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
            <arg>-C{document_to_document_classes,
                eu.dnetlib.iis.documentsclassification.schemas.DocumentToDocumentClasses,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/document_classes.json}
            </arg>
            <arg>-Odocument_to_document_classes=${workingDir}/producer/document_to_document_classes</arg>
            <arg>-C{document_to_dataset,
                eu.dnetlib.iis.referenceextraction.dataset.schemas.DocumentToDataSet,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/document_to_dataset.json}
            </arg>
            <arg>-Odocument_to_dataset=${workingDir}/producer/document_to_dataset</arg>
            <arg>-C{document_to_project,
                eu.dnetlib.iis.referenceextraction.project.schemas.DocumentToProject,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/document_to_project.json}
            </arg>
            <arg>-Odocument_to_project=${workingDir}/producer/document_to_project</arg>
            <arg>-C{document_to_project_concepts,
                eu.dnetlib.iis.export.schemas.DocumentToConceptIds,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/document_to_project_concepts.json}
            </arg>
            <arg>-Odocument_to_project_concepts=${workingDir}/producer/document_to_project_concepts</arg>
            <arg>-C{document_to_research_initiatives,
                eu.dnetlib.iis.export.schemas.DocumentToConceptIds,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/document_to_research_initiatives.json}
            </arg>
            <arg>-Odocument_to_research_initiatives=${workingDir}/producer/document_to_research_initiatives</arg>
            <arg>-C{citation,
                eu.dnetlib.iis.export.schemas.Citations,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/citations.json}
            </arg>
            <arg>-Ocitation=${workingDir}/producer/citation</arg>
            <arg>-C{document_similarity,
                eu.dnetlib.iis.documentssimilarity.schemas.DocumentSimilarity,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/document_similarity.json}
            </arg>
            <arg>-Odocument_similarity=${workingDir}/producer/document_similarity</arg>

            <arg>-C{document_pdb,
                eu.dnetlib.iis.export.schemas.DocumentToConceptIds,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/document_pdb.json}
            </arg>
            <arg>-Odocument_pdb=${workingDir}/producer/document_pdb</arg>
            <arg>-C{matched_org,
                eu.dnetlib.iis.wf.affmatching.model.MatchedOrganization,
                eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/input/matched_doc_organizations.json}
            </arg>
            <arg>-Omatched_org=${workingDir}/producer/matched_doc_organizations</arg>
        </java>
        <ok to="export_actionmanager_sequencefile" />
        <error to="fail" />
    </action>

    <action name="export_actionmanager_sequencefile">
        <sub-workflow>
            <app-path>${wf:appPath()}/export_actionmanager_sequencefile</app-path>
            <propagate-configuration />
            <configuration>
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/export_actionmanager_sequencefile/working_dir</value>
                </property>
                <property>
                    <name>input_document_to_project</name>
                    <value>${workingDir}/producer/document_to_project</value>
                </property>
                <property>
                    <name>input_document_to_project_concepts</name>
                    <value>${workingDir}/producer/document_to_project_concepts</value>
                </property>
                <property>
                    <name>input_document_to_dataset</name>
                    <value>${workingDir}/producer/document_to_dataset</value>
                </property>
                <property>
                    <name>input_document_to_research_initiatives</name>
                    <value>${workingDir}/producer/document_to_research_initiatives</value>
                </property>
                <property>
                    <name>input_document_to_pdb</name>
                    <value>${workingDir}/producer/document_pdb</value>
                </property>
                <property>
                    <name>input_document_to_document_classes</name>
                    <value>${workingDir}/producer/document_to_document_classes</value>
                </property>
                <property>
                    <name>input_citations</name>
                    <value>${workingDir}/producer/citation</value>
                </property>
                <property>
                    <name>input_document_similarity</name>
                    <value>${workingDir}/producer/document_similarity</value>
                </property>
                <property>
                    <name>input_matched_doc_organizations</name>
                    <value>${workingDir}/producer/matched_doc_organizations</value>
                </property>

                <property>
                    <name>output</name>
                    <value>${workingDir}/output</value>
                </property>
                <property>
                    <name>action_set_id_document_similarities_standard</name>
                    <value>actionset-id</value>
                </property>
                <property>
                    <name>action_set_id_document_classes</name>
                    <value>actionset-id</value>
                </property>
                <property>
                    <name>action_set_id_document_referencedProjects</name>
                    <value>actionset-id</value>
                </property>
                <property>
                    <name>action_set_id_document_referencedDatasets</name>
                    <value>actionset-id</value>
                </property>
                <property>
                    <name>action_set_id_document_referencedDocuments</name>
                    <value>actionset-id</value>
                </property>
                <property>
                    <name>action_set_id_document_research_initiative</name>
                    <value>actionset-id</value>
                </property>
                <property>
                    <name>action_set_id_document_pdb</name>
                    <value>actionset-id</value>
                </property>
                <property>
                    <name>action_set_id_matched_doc_organizations</name>
                    <value>actionset-id</value>
                </property>
                <property>
                    <name>referenceextraction_pdb_url_root</name>
                    <value>http://www.rcsb.org/pdb/explore/explore.do?structureId=</value>
                </property>
                <property>
                    <!-- preserving input order -->
                    <name>reduce_tasks</name>
                    <value>0</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="forking" />
        <error to="fail" />
    </action>

    <fork name="forking">
        <path start="consumer-citations" />
        <path start="consumer-document_classes" />
        <path start="consumer-document_pdb" />
        <path start="consumer-document_similarity" />
        <path start="consumer-document_to_dataset" />
        <path start="consumer-document_to_project" />
        <path start="consumer-document_to_research_initiatives" />
        <path start="consumer-matched_doc_organizations" />
    </fork>

    <action name="consumer-citations">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/document_referencedDocuments/actionset-id</arg>
            <arg>-Pexpectation_properties_csv=/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/citations.properties</arg>
        </java>
        <ok to="joining" />
        <error to="fail" />
    </action>

    <action name="consumer-document_classes">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/document_classes/actionset-id</arg>
            <arg>-Pexpectation_properties_csv=/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_classes.properties</arg>
        </java>
        <ok to="joining" />
        <error to="fail" />
    </action>

    <action name="consumer-document_pdb">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/document_pdb/actionset-id</arg>
            <arg>-Pexpectation_properties_csv=/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_pdb.properties</arg>
        </java>
        <ok to="joining" />
        <error to="fail" />
    </action>

    <action name="consumer-document_similarity">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/document_similarities_standard/actionset-id</arg>
            <arg>-Pexpectation_properties_csv=/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_similarity_1.properties,/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_similarity_2.properties
            </arg>
        </java>
        <ok to="joining" />
        <error to="fail" />
    </action>

    <action name="consumer-document_to_dataset">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/document_referencedDatasets/actionset-id</arg>
            <arg>-Pexpectation_properties_csv=/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_to_dataset_1.properties,/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_to_dataset_2.properties
            </arg>
        </java>
        <ok to="joining" />
        <error to="fail" />
    </action>

    <action name="consumer-document_to_project">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/document_referencedProjects/actionset-id</arg>
            <arg>-Pexpectation_properties_csv=/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_to_project_1.properties,/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_to_project_2.properties,/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_to_project_concepts.properties
            </arg>
        </java>
        <ok to="joining" />
        <error to="fail" />
    </action>

    <action name="consumer-document_to_research_initiatives">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/document_research_initiative/actionset-id</arg>
            <arg>-Pexpectation_properties_csv=/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/document_to_research_initiatives.properties</arg>
        </java>
        <ok to="joining" />
        <error to="fail" />
    </action>

    <action name="consumer-matched_doc_organizations">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/matched_doc_organizations/actionset-id</arg>
            <arg>-Pexpectation_properties_csv=/eu/dnetlib/iis/wf/export/actionmanager/sequencefile/sampledataproducer/output/matched_doc_organizations.properties</arg>
        </java>
        <ok to="joining" />
        <error to="fail" />
    </action>

    <join name="joining" to="end" />

    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="end" />
</workflow-app>