<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-export_actionmanager_entity_dataset_default">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>

    <start to="producer" />

    <action name="producer">
        <java>
            <!-- The data generated by this node is deleted in this section -->
            <prepare>
                <delete path="${nameNode}${workingDir}/producer" />
                <mkdir path="${nameNode}${workingDir}/producer" />
            </prepare>
            <!-- This is simple wrapper for the Java code -->
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
            <arg>-C{document_to_mdstore,
                eu.dnetlib.iis.importer.schemas.DocumentToMDStore,
                eu/dnetlib/iis/wf/export/actionmanager/entity/dataset/default/input/document_to_mdstore.json}
            </arg>
            <arg>-Odocument_to_mdstore=${workingDir}/producer/document_to_mdstore</arg>
        </java>
        <ok to="exporter-dataset-entities" />
        <error to="fail" />
    </action>

    <action name="exporter-dataset-entities">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.entity.DatasetExporterProcess</arg>
            <arg>-Iinput=${workingDir}/producer/document_to_mdstore</arg>
            
            <!-- mock MDStore facade configuration -->
            <arg>-Pmdstore.facade.factory.classname=eu.dnetlib.iis.wf.export.actionmanager.entity.facade.MockMDStoreFacadeFactory</arg>
            <arg>-Pmdstore.facade.mock.static.resource.mdId1.docId1=/eu/dnetlib/iis/wf/export/actionmanager/entity/dataset/default/input/dataset.xml</arg>
            <!--  -->
            
            <arg>-Pexport.action.setid=dataset-entity-id</arg>
            <arg>-Pexport.seq.file.output.dir.root=${workingDir}/output/</arg>
            <arg>-Pexport.seq.file.output.dir.name=datasets</arg>
        </java>
        <ok to="consumer" />
        <error to="fail" />
    </action>

    <action name="consumer">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.export.actionmanager.sequencefile.TestingConsumer</arg>
            <arg>-Iseqfile=${workingDir}/output/datasets</arg>
            <arg>-Pexpectation_file_paths=/eu/dnetlib/iis/wf/export/actionmanager/entity/dataset/default/output/dataset.expectations</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>


    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="end" />
</workflow-app>