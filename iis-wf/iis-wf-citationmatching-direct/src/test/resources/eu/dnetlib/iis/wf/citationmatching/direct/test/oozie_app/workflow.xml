<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-citationmatching_direct_sampledataproducer">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="producer"/>
    <action name="producer">
        <java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${workingDir}/producer" />
				<mkdir path="${nameNode}${workingDir}/producer" />
			</prepare>
            <!-- This is simple wrapper for the Java code -->
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<!-- The business Java code that gets to be executed -->
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
            <!-- Specification of the output ports -->
            <arg>-C{metadata,
            eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal,
            eu/dnetlib/iis/wf/citationmatching/direct/data/input/documents.json}</arg>
            <!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-Ometadata=${workingDir}/producer/document_metadata</arg>
        </java>
        <ok to="ingest_citations"/>
        <error to="fail"/>
    </action>
    
    <action name="ingest_citations">
        <sub-workflow>
            <app-path>${wf:appPath()}/citationmatching_direct</app-path>
            <configuration>
                <property>
                    <name>jobTracker</name>
                    <value>${jobTracker}</value>
                </property>
                <property>
                    <name>nameNode</name>
                    <value>${nameNode}</value>
                </property>
                <property>
                    <name>queueName</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>oozieLauncherQueueName</name>
                    <value>${oozieLauncherQueueName}</value>
                </property>
                <property>
                    <name>oozieTopWfApplicationPath</name>
                    <value>${oozieTopWfApplicationPath}</value>
                </property>
                <property>
                    <name>projectUberJarName</name>
                    <value>${projectUberJarName}</value>
                </property>
                <!-- Input ports. -->
                <property>
                    <name>input</name>
                    <value>${workingDir}/producer/document_metadata</value>
                </property>
                <!-- Output port bound to given path -->
                <property>
                    <name>output</name>
                    <value>${workingDir}/output/citation</value>
                </property>
                <property>
                    <name>output_report_root_path</name>
                    <value>${workingDir}/report</value>
                </property>
                
                <property>
                    <name>sparkExecutorMemory</name>
                    <value>1G</value>
                </property>
                <property>
                    <name>sparkNumExecutors</name>
                    <value>2</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>
    
    <action name="consumer">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
            <arg>-C{citation,
                eu.dnetlib.iis.common.citations.schemas.Citation,
                eu/dnetlib/iis/wf/citationmatching/direct/data/expected_output/citations.json}</arg>
            <arg>-Icitation=${workingDir}/output/citation</arg>
            
            <arg>-C{report,eu.dnetlib.iis.common.schemas.ReportParam,eu/dnetlib/iis/wf/citationmatching/direct/data/expected_output/report.json}</arg>
            <arg>-Ireport=${workingDir}/report/citationmatching_direct</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>
    
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
