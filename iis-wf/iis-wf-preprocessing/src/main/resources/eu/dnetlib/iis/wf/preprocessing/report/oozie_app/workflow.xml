<workflow-app xmlns="uri:oozie:workflow:0.4" name="preprocessing_report">

    <parameters>
        <property>
            <name>input_partial_reports</name>
            <description>Base directory with partial reports. Subdirectories of this directory should contain
                        report datastore (avro with eu.dnetlib.iis.common.schemas.ReportEntry records)</description>
        </property>
        <property>
            <name>working_dir</name>
            <description>working directory</description>
        </property>
        <property>
            <name>reports_external_path</name>
            <description>directory for storing reports from different executions of primary workflow (if $UNDEFINED$ then copying to external directory will be omitted)</description>
        </property>
    </parameters>
        
    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="build-report" />
    
    <action name="build-report">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.report.ReportMerger</arg>
            <arg>-Ipartial_reports=${input_partial_reports}</arg>
            <arg>-Oreport=${output_report}</arg>
        </java>
        <ok to="decision-copy-report" />
        <error to="fail" />
    </action>
    
    <decision name="decision-copy-report">
        <switch>
            <case to="copy-report">${reports_external_path ne "$UNDEFINED$"}</case>
            <default to="end" />
        </switch>
    </decision>
    
    <action name="copy-report">
        <distcp xmlns="uri:oozie:distcp-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <mkdir path="${nameNode}${reports_external_path}" />
            </prepare>
            <arg>${nameNode}${working_dir}/report.json</arg>
            <arg>${nameNode}${reports_external_path}/preprocessing_report_${replaceAll(timestamp(), "(..)T(..):(..)Z$", "$1_$2-$3")}.json</arg>
        </distcp>
        <ok to="end" />
        <error to="fail" />
    </action>
    
    
    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end" />

</workflow-app>