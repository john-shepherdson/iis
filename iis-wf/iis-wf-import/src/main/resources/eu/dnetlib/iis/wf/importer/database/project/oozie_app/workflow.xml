<workflow-app xmlns="uri:oozie:workflow:0.4" name="importer_database_project">
	
	<parameters>
		<property>
			<name>database_service_location</name>
			<value>$UNDEFINED$</value>
			<description>Database service location URL</description>
		</property>
		<property>
			<name>database_name</name>
			<value>dnet_openaireplus</value>
			<description>database name</description>
		</property>
		<property>
			<name>output</name>
			<description>project output directory</description>
		</property>
		<property>
			<name>resultset_client_read_timeout</name>
			<value>60000</value>
			<description>result set client reading timeout</description>
		</property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
	<start to="database-project-importer" />
	
	<action name="database-project-importer">
		<java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.wf.importer.database.project.DatabaseServiceBasedProjectImporter</arg>
			<arg>-Pimport.database.service.location=${database_service_location}</arg>
			<arg>-Pimport.database.service.dbname=${database_name}</arg>
			<arg>-Pimport.resultset.client.read.timeout=${resultset_client_read_timeout}</arg>
			<arg>-Oproject=${output}</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>
	
	<kill name="fail">
		<message>Unfortunately, the process failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>
