<workflow-app xmlns="uri:oozie:workflow:0.4" name="importer_concept">
	
	<parameters>
		<property>
			<name>islookup_service_location</name>
			<description>islookup service location</description>
		</property>
		<property>
			<name>output</name>
			<description>concept avro datastore output</description>
		</property>
		<property>
			<name>context_ids_csv</name>
			<description>comma separated context identifiers</description>
		</property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapred.job.queue.name</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
	<start to="concept-importer" />
	
	<action name="concept-importer">
		<java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.wf.importer.concept.ISLookupServiceBasedConceptImporter</arg>
			<arg>-Pimport.islookup.service.location=${islookup_service_location}</arg>
			<arg>-Pimport.context.ids.csv=${context_ids_csv}</arg>
			<arg>-Oconcepts=${output}</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>
	
	<kill name="fail">
		<message>Unfortunately, the process failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>
