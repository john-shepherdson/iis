<workflow-app xmlns="uri:oozie:workflow:0.4" name="importer_concept">
	
	<parameters>
        <property>
            <name>islookup_facade_factory_classname</name>
            <value>eu.dnetlib.iis.wf.importer.facade.WebServiceISLookupFacadeFactory</value>
            <description>ServiceFacadeFactory implementation class name producing eu.dnetlib.iis.wf.importer.facade.ISLookupFacade</description>
        </property>
		<property>
			<name>islookup_service_location</name>
			<description>islookup service location</description>
		</property>
		<property>
			<name>output</name>
			<description>concept avro datastore output</description>
		</property>
		<property>
			<name>context_ids_csv</name>
			<description>comma separated context identifiers</description>
		</property>
        <property>
            <name>output_report_root_path</name>
            <description>base directory for storing reports</description>
        </property>
        <property>
            <name>output_report_relative_path</name>
            <value>import_concept</value>
            <description>directory for storing report (relative to output_report_root_path)</description>
        </property>
        <property>
            <name>resultset_client_read_timeout</name>
            <value>60000</value>
            <description>result set client reading timeout (expressed in milliseconds)</description>
        </property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
	<start to="concept-importer" />
	
	<action name="concept-importer">
		<java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.wf.importer.concept.ISLookupServiceBasedConceptImporter</arg>
			<arg>-Pimport.islookup.service.location=${islookup_service_location}</arg>
			<arg>-Pimport.context.ids.csv=${context_ids_csv}</arg>
            <arg>-Pimport.resultset.client.read.timeout=${resultset_client_read_timeout}</arg>
            <arg>-Pimport.facade.factory.classname=${islookup_facade_factory_classname}</arg>
			<arg>-Oconcepts=${output}</arg>
			<capture-output />
		</java>
		<ok to="report" />
		<error to="fail" />
	</action>
    
    
    <action name="report">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.report.ReportGenerator</arg>
            <arg>-Preport.import.concepts=${wf:actionData('concept-importer')['CONCEPT_COUNTER']}</arg>
            <arg>-Oreport=${output_report_root_path}/${output_report_relative_path}</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>
    
	<kill name="fail">
		<message>Unfortunately, the process failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>
