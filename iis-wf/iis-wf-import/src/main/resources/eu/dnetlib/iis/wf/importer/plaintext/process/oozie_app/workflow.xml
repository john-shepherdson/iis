<workflow-app xmlns="uri:oozie:workflow:0.4" name="importer_plaintext_process">

	<parameters>
		<property>
			<name>input</name>
			<description>text importer input directory</description>
		</property>
		<property>
			<name>output</name>
			<description>text importer output directory</description>
		</property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
	<start to="content-retriever" />
	
	<action name="content-retriever">
        <java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
			<!-- This is simple wrapper for the Java code -->
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.wf.importer.content.DocumentTextUrlBasedImporterProcess</arg>
			<arg>-Icontent_url=${input}</arg>
			<arg>-Otext=${output}</arg>
		</java>
          <ok to="end"/>
        <error to="fail"/>
    </action>
	
	<kill name="fail">
		<message>Unfortunately, the process failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>
