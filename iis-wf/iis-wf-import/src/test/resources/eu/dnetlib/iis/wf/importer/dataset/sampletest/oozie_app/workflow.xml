<?xml version="1.0"?>
<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-importer_dataset_sampletest">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
	<start to="import_dataset" />

    <action name="import_dataset">
        <sub-workflow>
            <app-path>${wf:appPath()}/import_dataset</app-path>
            <propagate-configuration />
            <configuration>
                <property>
                    <name>mdstore_facade_factory_classname</name>
                    <value>eu.dnetlib.iis.wf.importer.dataset.MockMDStoreFacadeFactory</value>
                </property>
                <property>
                    <name>mdstore_ids_csv</name>
                    <value>mdstore-id1</value>
                </property>
                <property>
                    <name>output_dataset</name>
                    <value>${workingDir}/dataset</value>
                </property>
                <property>
                    <name>output_dataset_to_mdstore</name>
                    <value>${workingDir}/dataset_to_mdstore</value>
                </property>
                <property>
                    <name>output_report_root_path</name>
                    <value>${workingDir}/report</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer" />
        <error to="fail" />
    </action>

	<action name="consumer">
        <java>
            <!-- This is simple wrapper for the Java code -->
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <!-- The business Java code that gets to be executed -->
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
            <!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-C{dataset,
                eu.dnetlib.iis.importer.schemas.DataSetReference,
                eu/dnetlib/iis/wf/importer/dataset/data/output/dataset.json}</arg>
                <arg>-C{dataset_to_mdstore,
                eu.dnetlib.iis.importer.schemas.DocumentToMDStore,
                eu/dnetlib/iis/wf/importer/dataset/data/output/dataset_to_mdstore.json}</arg>
            <arg>-C{report,eu.dnetlib.iis.common.schemas.ReportParam,
                eu/dnetlib/iis/wf/importer/dataset/data/output/report.json}</arg>
            <!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-Idataset=${workingDir}/dataset</arg>
            <arg>-Idataset_to_mdstore=${workingDir}/dataset_to_mdstore</arg>
            <arg>-Ireport=${workingDir}/report/import_dataset</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>

    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
        			[${wf:errorMessage(wf:lastErrorNode())}]
        		</message>
    </kill>

    <end name="end"/>
</workflow-app>
