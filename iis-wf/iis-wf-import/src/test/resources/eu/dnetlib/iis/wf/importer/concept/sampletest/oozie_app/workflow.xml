<?xml version="1.0"?>
<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-importer_concept_sampletest">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
	<start to="import_concept" />

    <action name="import_concept">
        <sub-workflow>
            <app-path>${wf:appPath()}/import_concept</app-path>
            <propagate-configuration />
            <configuration>
                <property>
                    <name>islookup_facade_factory_classname</name>
                    <value>eu.dnetlib.iis.wf.importer.concept.MockISLookupFacadeFactory</value>
                </property>
                <property>
                    <name>islookup_service_location</name>
                    <value>$UNDEFINED$</value>
                </property>
                <property>
                    <name>context_ids_csv</name>
                    <value>fet-fp7</value>
                </property>
                <property>
                    <name>output</name>
                    <value>${workingDir}/out</value>
                </property>
                <property>
                    <name>output_report_root_path</name>
                    <value>${workingDir}/report</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer" />
        <error to="fail" />
    </action>

	<action name="consumer">
        <java>
            <!-- This is simple wrapper for the Java code -->
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <!-- The business Java code that gets to be executed -->
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
            <!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-C{concepts,
                eu.dnetlib.iis.importer.schemas.Concept,
                eu/dnetlib/iis/wf/importer/concept/data/output/concept.json}</arg>
            <arg>-C{report,eu.dnetlib.iis.common.schemas.ReportEntry,
                eu/dnetlib/iis/wf/importer/concept/data/output/report.json}</arg>
            <!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-Iconcepts=${workingDir}/out</arg>
            <arg>-Ireport=${workingDir}/report/import_concept</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>

    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
        			[${wf:errorMessage(wf:lastErrorNode())}]
        		</message>
    </kill>

    <end name="end"/>
</workflow-app>
