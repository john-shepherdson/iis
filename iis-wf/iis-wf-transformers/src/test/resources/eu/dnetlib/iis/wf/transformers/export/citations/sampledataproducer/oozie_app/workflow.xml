<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-transformers_export_citations_sampledataproducer">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapred.job.queue.name</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
	<start to="producer" />

	<action name="producer">
		<java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${workingDir}/producer" />
				<mkdir path="${nameNode}${workingDir}/producer" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
			<arg>-C{citation,
				eu.dnetlib.iis.common.citations.schemas.Citation,
				eu/dnetlib/iis/wf/transformers/export/citations/sampledataproducer/data/common_citations.json}
			</arg>
			<arg>-Ocitation=${workingDir}/producer/citation</arg>
		</java>
		<ok to="transformer_export_citations" />
		<error to="fail" />
	</action>

	<action name="transformer_export_citations">
		<sub-workflow>
			<app-path>${wf:appPath()}/transformer_export_citations</app-path>
			<configuration>
				<property>
					<name>jobTracker</name>
					<value>${jobTracker}</value>
				</property>
				<property>
					<name>nameNode</name>
					<value>${nameNode}</value>
				</property>
				<property>
					<name>queueName</name>
					<value>${queueName}</value>
				</property>
                <property>
                    <name>oozieLauncherQueueName</name>
                    <value>${oozieLauncherQueueName}</value>
                </property>
				<property>
					<name>workingDir</name>
					<value>${workingDir}/transformer_export_citations/working_dir</value>
				</property>
				<property>
					<name>input</name>
					<value>${workingDir}/producer/citation</value>
				</property>
				<property>
					<name>output</name>
					<value>${workingDir}/transformer_export_citations/output</value>
				</property>
			</configuration>
		</sub-workflow>
		<ok to="consumer" />
		<error to="fail" />
	</action>

	<action name="consumer">
		<java>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
			<arg>-C{output,
				eu.dnetlib.iis.export.schemas.Citations,
				eu/dnetlib/iis/wf/transformers/export/citations/sampledataproducer/data/citations.json}
			</arg>
			<arg>-Ioutput=${workingDir}/transformer_export_citations/output</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>

	<kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]
		</message>
	</kill>

	<end name="end" />

</workflow-app>
