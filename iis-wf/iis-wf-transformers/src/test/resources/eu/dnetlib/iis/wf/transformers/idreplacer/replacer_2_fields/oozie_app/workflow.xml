<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-idreplacer_2_fields">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="producer"/>
    <action name="producer">
        <java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${workingDir}/producer" />
				<mkdir path="${nameNode}${workingDir}/producer" />
			</prepare>
            <!-- This is simple wrapper for the Java code -->
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<!-- The business Java code that gets to be executed -->
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
			<!-- Specification of the output ports -->
			<arg>-C{main,
                eu.dnetlib.iis.citationmatching.schemas.Citation,
                eu/dnetlib/iis/wf/transformers/idreplacer/replacer_2_fields/data/citation.json}</arg>
            <arg>-C{id_mapping,
				eu.dnetlib.iis.common.schemas.IdentifierMapping,
				eu/dnetlib/iis/wf/transformers/idreplacer/replacer_2_fields/data/id_mapping.json}</arg>
			<!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-Omain=${workingDir}/producer/main</arg>
            <arg>-Oid_mapping=${workingDir}/producer/id_mapping</arg>
        </java>
        <ok to="idreplacer"/>
        <error to="fail"/>
    </action>
    <action name="idreplacer">
        <sub-workflow>
            <app-path>${wf:appPath()}/idreplacer</app-path>
            <configuration>
                <property>
                    <name>jobTracker</name>
                    <value>${jobTracker}</value>
                </property>
                <property>
                    <name>nameNode</name>
                    <value>${nameNode}</value>
                </property>
                <property>
                    <name>queueName</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>oozieLauncherQueueName</name>
                    <value>${oozieLauncherQueueName}</value>
                </property>
                <!-- Working directory of the subworkflow -->                
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/idreplacer/working_dir</value>
                </property>
                <property>
                    <name>id_field_to_replace1</name>
                    <value>sourceDocumentId</value>
                </property>
                <property>
                    <name>id_field_to_replace2</name>
                    <value>destinationDocumentId</value>
                </property>
                <property>
                    <name>schema</name>
                    <value>eu.dnetlib.iis.citationmatching.schemas.Citation</value>
                </property>
                <!-- Input ports. -->
                <property>
                    <name>input</name>
                    <value>${workingDir}/producer/main</value>
                </property>
                <property>
                    <name>input_id_mapping</name>
                    <value>${workingDir}/producer/id_mapping</value>
                </property>
                <!-- Output port bound to given path -->
                <property>
                    <name>output</name>
                    <value>${workingDir}/collapser_idreplacer/output</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>
    <action name="consumer">
		<java>
			<!-- This is simple wrapper for the Java code -->
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<!-- The business Java code that gets to be executed -->
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
			<!-- Specification of the input ports -->
			<arg>-C{output,
                eu.dnetlib.iis.citationmatching.schemas.Citation,
				eu/dnetlib/iis/wf/transformers/idreplacer/replacer_2_fields/data/output.json}</arg>
    		<!-- All input and output ports have to be bound to paths in HDFS -->
			<arg>-Ioutput=${workingDir}/collapser_idreplacer/output</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
