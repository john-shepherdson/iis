<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-citations_from_referencemetadata">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="producer"/>
    <action name="producer">
        <java>
            <!-- The data generated by this node is deleted in this section -->
            <prepare>
                <delete path="${nameNode}${workingDir}/producer" />
                <mkdir path="${nameNode}${workingDir}/producer" />
            </prepare>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
            
            <arg>-C{document_metadata,
            eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal,
            eu/dnetlib/iis/wf/transformers/common/citations/from/referencemetadata/test/data/input_document_metadata.json}</arg>
            
            <arg>-Odocument_metadata=${workingDir}/producer/doc_metadata</arg>
        </java>
        <ok to="citations_from_referencemetadata"/>
        <error to="fail"/>
    </action>
    
    <action name="citations_from_referencemetadata">
        <sub-workflow>
            <app-path>${wf:appPath()}/citations_from_referencemetadata</app-path>
            <propagate-configuration/>
            <configuration>
                <property>
                    <name>input</name>
                    <value>${workingDir}/producer/doc_metadata</value>
                </property>
                <property>
                    <name>output</name>
                    <value>${workingDir}/output/citations</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>
    
    <action name="consumer">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
            
            <arg>-C{citations,
                eu.dnetlib.iis.common.citations.schemas.Citation,
                eu/dnetlib/iis/wf/transformers/common/citations/from/referencemetadata/test/data/output_citations.json}</arg>
            <!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-Icitations=${workingDir}/output/citations</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>
    
    <kill name="fail">
        <message>Unfortunately, the workflow failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>