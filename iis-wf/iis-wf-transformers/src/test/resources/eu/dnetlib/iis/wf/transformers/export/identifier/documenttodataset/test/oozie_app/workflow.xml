<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-transformers_export_citations_sampledataproducer">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
	<start to="producer" />

	<action name="producer">
		<java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${workingDir}/producer" />
				<mkdir path="${nameNode}${workingDir}/producer" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
			
			<arg>-C{documentToDataset,
				eu.dnetlib.iis.referenceextraction.dataset.schemas.DocumentToDataSet,
				eu/dnetlib/iis/wf/transformers/export/identifier/documenttodataset/test/data/document_to_dataset.json}
			</arg>
			<arg>-OdocumentToDataset=${workingDir}/producer/document_to_dataset</arg>
			
			<arg>-C{inputDatasetToMdStore,
                eu.dnetlib.iis.importer.schemas.DatasetToMDStore,
                eu/dnetlib/iis/wf/transformers/export/identifier/documenttodataset/test/data/input_dataset_to_mdstore.json}
            </arg>
            <arg>-OinputDatasetToMdStore=${workingDir}/producer/input_document_to_mdstore</arg>
			
		</java>
		<ok to="transformers_export_identifier_document_to_dataset" />
		<error to="fail" />
	</action>

    <action name="transformers_export_identifier_document_to_dataset">
        <sub-workflow>
            <app-path>${wf:appPath()}/transformers_export_identifier_document_to_dataset</app-path>
            <propagate-configuration />
            <configuration>
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/export_identifier_document_to_dataset/working_dir</value>
                </property>
                <property>
                    <name>input_document_to_dataset</name>
                    <value>${workingDir}/producer/document_to_dataset</value>
                </property>
                <property>
                    <name>input_dataset_to_mdstore</name>
                    <value>${workingDir}/producer/input_document_to_mdstore</value>
                </property>
                <property>
                    <name>output_dataset_to_mdstore</name>
                    <value>${workingDir}/identifier/datasets/output_document_to_mdstore</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer" />
        <error to="fail" />
    </action>

	<action name="consumer">
		<java>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
			<arg>-C{output,
				eu.dnetlib.iis.importer.schemas.DatasetToMDStore,
				eu/dnetlib/iis/wf/transformers/export/identifier/documenttodataset/test/data/output_dataset_to_mdstore.json}
			</arg>
			<arg>-Ioutput=${workingDir}/identifier/datasets/output_document_to_mdstore</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>

	<kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]
		</message>
	</kill>

	<end name="end" />

</workflow-app>
