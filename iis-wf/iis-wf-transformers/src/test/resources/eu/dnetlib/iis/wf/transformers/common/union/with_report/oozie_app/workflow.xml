<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-union_with_report">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="producer"/>
    <action name="producer">
        <java>
            <!-- The data generated by this node is deleted in this section -->
            <prepare>
                <delete path="${nameNode}${workingDir}/producer" />
                <mkdir path="${nameNode}${workingDir}/producer" />
            </prepare>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
            
            <arg>-C{data_a,eu.dnetlib.iis.common.schemas.IdentifierMapping,
                eu/dnetlib/iis/wf/transformers/common/union/input/datastore_a.json}</arg>
            <arg>-Odata_a=${workingDir}/producer/datastore_a</arg>
            
            <arg>-C{data_b,eu.dnetlib.iis.common.schemas.IdentifierMapping,
                eu/dnetlib/iis/wf/transformers/common/union/input/datastore_b.json}</arg>
            <arg>-Odata_b=${workingDir}/producer/datastore_b</arg>
        </java>
        <ok to="union"/>
        <error to="fail"/>
    </action>
    
    <action name="union">
        <sub-workflow>
            <app-path>${wf:appPath()}/union_with_report</app-path>
            <propagate-configuration />
            <configuration>
                <property>
                    <name>input_a</name>
                    <value>${workingDir}/producer/datastore_a</value>
                </property>
                <property>
                    <name>input_b</name>
                    <value>${workingDir}/producer/datastore_b</value>
                </property>
                <property>
                    <name>output</name>
                    <value>${workingDir}/union</value>
                </property>
                <property>
                    <name>schema</name>
                    <value>eu.dnetlib.iis.common.schemas.IdentifierMapping</value>
                </property>
                <property>
                    <name>output_report</name>
                    <value>${workingDir}/report</value>
                </property>
                <property>
                    <name>union_count_report_key</name>
                    <value>union.report.key</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>
    
    <action name="consumer">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
            
            <arg>-C{union,eu.dnetlib.iis.common.schemas.IdentifierMapping,
                eu/dnetlib/iis/wf/transformers/common/union/expected_output/union_datastore.json}</arg>
            <arg>-Iunion=${workingDir}/union</arg>
            
            <arg>-C{report,eu.dnetlib.iis.common.schemas.ReportParam,
                eu/dnetlib/iis/wf/transformers/common/union/expected_output/report.json}</arg>
            <arg>-Ireport=${workingDir}/report</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>
    <kill name="fail">
        <message>Unfortunately, the workflow failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>