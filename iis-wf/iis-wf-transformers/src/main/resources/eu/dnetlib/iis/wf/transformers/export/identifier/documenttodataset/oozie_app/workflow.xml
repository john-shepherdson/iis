<workflow-app xmlns="uri:oozie:workflow:0.4" name="transformers_export_identifiers_document_to_dataset">
	
	<parameters>
		<property>
			<name>input_document_to_dataset</name>
		</property>
		<property>
			<name>input_document_to_mdstore</name>
		</property>
		<property>
			<name>output_document_to_mdstore</name>
		</property>
	</parameters>
    
    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="generate-schema"/>
    
    <action name="generate-schema">
	    <java>
	        <main-class>eu.dnetlib.iis.common.javamapreduce.hack.AvroSchemaGenerator</main-class>
	        <arg>eu.dnetlib.iis.referenceextraction.dataset.schemas.DocumentToDataSet</arg>
	        <arg>eu.dnetlib.iis.importer.schemas.DatasetToMDStore</arg>
	        <capture-output />
	    </java>
	    <ok to="transformer" />
	    <error to="fail" />
	</action>
	
    <action name="transformer">
        <pig>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output_document_to_mdstore}" />
			</prepare>
            <!-- Path to PIG script the workflow executes. -->
            <script>lib/scripts/transformer.pig</script>
            
            <param>input_document_to_dataset=${input_document_to_dataset}</param>
            <param>schema_input_document_to_dataset=${wf:actionData('generate-schema')['eu.dnetlib.iis.referenceextraction.dataset.schemas.DocumentToDataSet']}</param>
            
            <param>input_document_to_mdstore=${input_document_to_mdstore}</param>
            <param>schema_input_document_to_mdstore=${wf:actionData('generate-schema')['eu.dnetlib.iis.importer.schemas.DatasetToMDStore']}</param>
            
            <param>output_document_to_mdstore=${output_document_to_mdstore}</param>
            <param>schema_output_document_to_mdstore=${wf:actionData('generate-schema')['eu.dnetlib.iis.importer.schemas.DatasetToMDStore']}</param>
        </pig>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
