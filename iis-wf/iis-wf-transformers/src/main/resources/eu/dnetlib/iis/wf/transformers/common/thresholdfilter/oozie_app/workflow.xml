<workflow-app xmlns="uri:oozie:workflow:0.4" name="transformers_common_thresholdfilter">
	
	<parameters>
		<property>
			<name>input</name>
			<description>input datastore</description>
		</property>
		<property>
			<name>threshold_field</name>
			<value>confidenceLevel</value>
			<description>threshold field name</description>
		</property>
		<property>
			<name>threshold_value</name>
			<description>threshold value below which input records will be filtered out, null values are also omitted</description>
		</property>
		<property>
			<name>output</name>
			<description>output datastore</description>
		</property>
		<property>
			<name>schema</name>
			<description>input and output records schema</description>
		</property>
	</parameters>
    
    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapred.job.queue.name</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="generate-schema"/>
    
    <action name="generate-schema">
	    <java>
	        <main-class>eu.dnetlib.iis.common.javamapreduce.hack.AvroSchemaGenerator</main-class>
	        <arg>${schema}</arg>
	        <capture-output />
	    </java>
	    <ok to="transformer" />
	    <error to="fail" />
	</action>
	
    <action name="transformer">
        <pig>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
            <!-- Path to PIG script the workflow executes. -->
            <script>lib/scripts/filter.pig</script>
            
            <param>input=${input}</param>
            <param>threshold_field=${threshold_field}</param>
            <param>threshold_value=${threshold_value}</param>
            <param>output=${output}</param>
            <param>schema=${wf:actionData('generate-schema')[wf:conf('schema')]}</param>
        </pig>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
