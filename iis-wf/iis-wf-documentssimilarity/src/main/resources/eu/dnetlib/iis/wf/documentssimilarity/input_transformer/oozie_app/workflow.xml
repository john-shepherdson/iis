<workflow-app xmlns="uri:oozie:workflow:0.4" name="transformers_documentssimilarity">

	<parameters>
		<property>
			<name>input_person</name>
			<description>person input datastore</description>
		</property>
		<property>
			<name>input_metadata</name>
			<description>merged input datastore</description>
		</property>
		<property>
			<name>output_document_metadata</name>
			<description>output directory</description>
		</property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>

    <start to="generate-schema"/>
    
    <action name="generate-schema">
	    <java>
	        <main-class>eu.dnetlib.iis.common.javamapreduce.hack.AvroSchemaGenerator</main-class>
	        <arg>eu.dnetlib.iis.importer.schemas.Person</arg>
	        <arg>eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal</arg>
	        <arg>eu.dnetlib.iis.documentssimilarity.schemas.DocumentMetadata</arg>
	        <capture-output />
	    </java>
	    <ok to="transformer" />
	    <error to="fail" />
	</action>
	
    <action name="transformer">
        <pig>
            <!-- The data generated by this node is deleted in this section -->
            <prepare>
                <delete path="${nameNode}${output_document_metadata}" />
            </prepare>
            <!-- Path to PIG script the workflow executes. -->
            <script>lib/scripts/transformer.pig</script>

            <param>input_person=${input_person}</param>
            <param>schema_input_person=${wf:actionData('generate-schema')['eu.dnetlib.iis.importer.schemas.Person']}</param>
            <param>input_metadata=${input_metadata}</param>
            <param>schema_input_metadata=${wf:actionData('generate-schema')['eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal']}</param>

            <param>output_document_metadata=${output_document_metadata}</param>
            <param>schema_output_document_metadata=${wf:actionData('generate-schema')['eu.dnetlib.iis.documentssimilarity.schemas.DocumentMetadata']}</param>
        </pig>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
        <message>Unfortunately, the workflow failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
