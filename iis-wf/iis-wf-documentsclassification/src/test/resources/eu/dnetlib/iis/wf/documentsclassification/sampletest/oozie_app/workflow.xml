<?xml version="1.0"?>

<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-documentsclassification_main_sampletest">
	<start to="producer" />

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapred.job.queue.name</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
	<action name="producer">
		<java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${workingDir}/documentsclassification/producer" />
				<mkdir path="${nameNode}${workingDir}/documentsclassification/producer" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
			
			<arg>-C{documents, 
				eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal,
				eu/dnetlib/iis/wf/documentsclassification/data/input/documents.json}</arg>
			
			<arg>-Odocuments=${workingDir}/documentsclassification/producer/documents</arg>
		</java>
		<ok to="documentsclassification" />
		<error to="fail" />
	</action>


    <action name="documentsclassification">
        <sub-workflow>
            <app-path>${wf:appPath()}/documentsclassification</app-path>
            <propagate-configuration/>
            <configuration>
                <!-- Working directory of the subworkflow -->
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/documentsclassification/working_dir</value>
                </property>
                <property>
                    <name>input_documents</name>
                    <value>${workingDir}/documentsclassification/producer/documents</value>
                </property>
                <property>
                    <name>output_document_to_document_classes</name>
                    <value>${workingDir}/documentsclassification/document_to_document_classes</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>

	<action name="consumer">
		<java>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
			<arg>-C{document_to_document_classes,
				eu.dnetlib.iis.documentsclassification.schemas.DocumentToDocumentClasses,
				eu/dnetlib/iis/wf/documentsclassification/data/expected_output/document_to_document_classes.json}</arg>
			<arg>-Idocument_to_document_classes=${workingDir}/documentsclassification/document_to_document_classes</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>

    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
        			[${wf:errorMessage(wf:lastErrorNode())}]
        		</message>
    </kill>

    <end name="end"/>
</workflow-app>
