<!-- Note that documentation placed in comments in this file uses the
"markdown" syntax (along with division into sections). -->
<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-citationmatching_main_workflow">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="data_producer" />

    <action name="data_producer">
        <java>
            <!-- The data generated by this node is deleted in this section -->
            <prepare>
                <delete path="${nameNode}${workingDir}/data_producer" />
                <mkdir path="${nameNode}${workingDir}/data_producer" />
            </prepare>
            <!-- This is simple wrapper for the Java code -->
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <!-- The business Java code that gets to be executed -->
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
            <!-- Specification of the output ports -->
            <arg>-C{document_metadata,
                eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal,
                eu/dnetlib/iis/wf/citationmatching/main_workflow/data/document_metadata.json}</arg>
            <arg>-C{persons,
                eu.dnetlib.iis.importer.schemas.Person,
                eu/dnetlib/iis/wf/citationmatching/main_workflow/data/person.json}</arg>
            <!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-Odocument_metadata=${workingDir}/data_producer/document</arg>
            <arg>-Opersons=${workingDir}/data_producer/person</arg>
        </java>
        <ok to="citation_matching" />
        <error to="fail" />
    </action>
    
    <action name="citation_matching">
        <sub-workflow>
            <app-path>${wf:appPath()}/citation_matching</app-path>
            <propagate-configuration/>
            <configuration>
                <property>
                    <name>input_metadata</name>
                    <value>${workingDir}/data_producer/document</value>
                </property>
                <property>
                    <name>input_person</name>
                    <value>${workingDir}/data_producer/person</value>
                </property>
                <property>
                    <name>output_citations</name>
                    <value>${workingDir}/citation/output</value>
                </property>
                <property>
                    <name>output_report_root_path</name>
                    <value>${workingDir}/report</value>
                </property>
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/citation_matching</value>
                </property>
                <property>
                    <name>sparkExecutorMemory</name>
                    <value>1G</value>
                </property>
                <property>
                    <name>sparkExecutorCores</name>
                    <value>1</value>
                </property>
                <property>
                    <name>sparkNumExecutors</name>
                    <value>2</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>

    <action name="consumer">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
            
            <arg>-C{citation,
                eu.dnetlib.iis.common.citations.schemas.Citation,
                eu/dnetlib/iis/wf/citationmatching/main_workflow/data/commonCitation.json}</arg>
            <arg>-Icitation=${workingDir}/citation/output</arg>
            
            <arg>-C{report,eu.dnetlib.iis.common.schemas.ReportParam,eu/dnetlib/iis/wf/citationmatching/main_workflow/data/report.json}</arg>
            <arg>-Ireport=${workingDir}/report/citationmatching_fuzzy</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>

    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="end" />
</workflow-app>
