<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-union_input_3">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapred.job.queue.name</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="producer"/>
    <action name="producer">
        <java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${workingDir}/producer" />
				<mkdir path="${nameNode}${workingDir}/producer" />
			</prepare>
            <!-- This is simple wrapper for the Java code -->
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<!-- The business Java code that gets to be executed -->
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
			<!-- Specification of the output ports -->
			<arg>-C{metadata_orig,
				eu.dnetlib.iis.importer.schemas.DocumentMetadata,
				eu/dnetlib/iis/wf/collapsers/union/data/metadata_orig.json}</arg>
            <arg>-C{metadata_cermine,
				eu.dnetlib.iis.importer.schemas.DocumentMetadata,
				eu/dnetlib/iis/wf/collapsers/union/data/metadata_cermine.json}</arg>
            <arg>-C{metadata_another,
				eu.dnetlib.iis.importer.schemas.DocumentMetadata,
				eu/dnetlib/iis/wf/collapsers/union/data/metadata_another.json}</arg>    
			<!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-Ometadata_orig=${workingDir}/producer/metadata_orig</arg>
            <arg>-Ometadata_cermine=${workingDir}/producer/metadata_cermine</arg>
            <arg>-Ometadata_another=${workingDir}/producer/metadata_another</arg>
        </java>
        <ok to="union"/>
        <error to="fail"/>
    </action>
    <action name="union">
        <sub-workflow>
            <app-path>${wf:appPath()}/union</app-path>
            <configuration>
                <property>
                    <name>jobTracker</name>
                    <value>${jobTracker}</value>
                </property>
                <property>
                    <name>nameNode</name>
                    <value>${nameNode}</value>
                </property>
                <property>
                    <name>queueName</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>oozieLauncherQueueName</name>
                    <value>${oozieLauncherQueueName}</value>
                </property>
                <property>
                    <name>mapred_child_java_opts</name>
                    <value>-Xmx1024M</value>
                </property>
                <!-- Working directory of the subworkflow -->
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/union/working_dir</value>
                </property>
                <property>
                    <name>schema_input</name>
                    <value>eu.dnetlib.iis.importer.schemas.DocumentMetadata</value>
                </property>
                <property>
                    <name>schema_output</name>
                    <value>eu.dnetlib.iis.collapsers.schemas.DocumentMetadataEnvelope</value>
                </property>
                <property>
                    <name>origin_1</name>
                    <value>orig</value>
                </property>
                <property>
                    <name>origin_2</name>
                    <value>cermine</value>
                </property>
                <property>
                    <name>origin_3</name>
                    <value>another</value>
                </property>
                <!-- Input ports. -->
                <property>
                    <name>input_1</name>
                    <value>${workingDir}/producer/metadata_orig</value>
                </property>
                <property>
                    <name>input_2</name>
                    <value>${workingDir}/producer/metadata_cermine</value>
                </property>
                <property>
                    <name>input_3</name>
                    <value>${workingDir}/producer/metadata_another</value>
                </property>
                <!-- Output port bound to given path -->
                <property>
                    <name>output</name>
                    <value>${workingDir}/collapser_union/output</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>
    <action name="consumer">
		<java>
			<!-- This is simple wrapper for the Java code -->
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<!-- The business Java code that gets to be executed -->
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
			<!-- Specification of the input ports -->
			<arg>-C{output,
				eu.dnetlib.iis.collapsers.schemas.DocumentMetadataEnvelope,
				eu/dnetlib/iis/wf/collapsers/union/data/metadata_output_3.json}</arg>
    		<!-- All input and output ports have to be bound to paths in HDFS -->
			<arg>-Ioutput=${workingDir}/collapser_union/output</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
